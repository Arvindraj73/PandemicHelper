<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="Widget.PandemicHelper.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.PandemicHelper.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.PandemicHelper.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.PandemicHelper.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="hintTextAppearance">@style/TextAppearance.PandemicHelper.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.PandemicHelper.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.PandemicHelper.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorAccent</item>
    </style>

</resources>
