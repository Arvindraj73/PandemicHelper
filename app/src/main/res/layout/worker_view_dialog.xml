<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardElevation="@dimen/padding"
    android:layout_margin="@dimen/place_autocomplete_button_padding"
    android:id="@+id/cardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/text_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tsize3"
            android:text="@string/worker_details"
            android:layout_marginTop="@dimen/mTop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tsize3"
            android:id="@+id/worker_name"
            android:layout_marginTop="@dimen/mTop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tsize3"
            android:layout_marginTop="@dimen/mTop"
            android:id="@+id/worker_num"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/mTop"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tsize3"
            android:id="@+id/a"/>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>